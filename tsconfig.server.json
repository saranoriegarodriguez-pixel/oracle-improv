{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/server",
    "rootDir": "./server",
    "noEmit": false,

    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["server/**/*.ts"],
  "exclude": ["src", "dist", "node_modules"]
}